@page "/"

<div class="control_wrapper">
    <SfDropDownList TValue="string" TItem="DropdownDataModel" PopupHeight="400px" PopupWidth="350px"
                    Placeholder="Select a vegetable" DataSource="@DropdownListData"
                    AllowFiltering="true" IgnoreCase="false"
                    FilterType="Syncfusion.Blazor.DropDowns.FilterType.EndsWith">
        <DropDownListFieldSettings Value="Id" Text="Vegetable"
                                   GroupBy="Category"></DropDownListFieldSettings>
    </SfDropDownList>
</div>

@code {

    public class DropdownDataModel
    {
        public string Id { get; set; }
        public string Vegetable { get; set; }
        public string Category { get; set; }

    }

    List<DropdownDataModel> DropdownListData = new List<DropdownDataModel>()
    {
        new DropdownDataModel() {  Id = "item1", Vegetable = "Cabbage", Category = "Leafy and Salad" },
        new DropdownDataModel() {  Id = "item2", Vegetable = "Chickpea", Category = "Beans" },
        new DropdownDataModel() {  Id = "item3", Vegetable = "Garlic", Category = "Bulb and Stem" },
        new DropdownDataModel() {  Id = "item4", Vegetable = "Green bean", Category = "Beans" },
        new DropdownDataModel() {  Id = "item5", Vegetable = "Horse gram", Category = "Beans" },
        new DropdownDataModel() {  Id = "item6", Vegetable = "Onion", Category = "Bulb and Stem" },
        new DropdownDataModel() {  Id = "item7", Vegetable = "Pumpkins", Category = "Leafy and Salad" },
        new DropdownDataModel() {  Id = "item8", Vegetable = "Spinach", Category = "Leafy and Salad" },
        new DropdownDataModel() {  Id = "item9", Vegetable = "Wheat grass", Category = "Leafy and Salad" },
        new DropdownDataModel() {  Id = "item10", Vegetable = "Yarrow", Category = "Leafy and Salad" }
    };

}

